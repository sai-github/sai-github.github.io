/*
getting started with class, structs and operator overloading

This would involve a creatiion of vector class and addition of vector class


Reference of this codes are from the book "Introduction through Problem Solving and Programming in C++"
by Abhiram Ranade , proffesor @ iitb (https://www.cse.iitb.ac.in/~ranade/)

*/

#include<iostream>

using namespace std;

struct V3{
	double x,y,z;
};

V3 make_V3(double x,double y,double z){
	V3 v;
	v.x=x;
	v.y=y;
	v.z=z;
	return v;
}

V3 sum(V3 a,V3 b){
	return make_V3(a.x+b.x,a.y+b.y,a.z+b.z);
}

V3 operator+ (V3 a,V3 b){
	return make_V3(a.x+b.x,a.y+b.y,a.z+b.z);
}

ostream & operator<< (ostream & var,V3 v){          //we are passing arguments of type (ostream& , V3) -> (ostream&)
	var<<"("<<v.x<<","<<v.y<<","<<v.z<<")";
	return var;
}

main(){
	V3 a={1,2,3},b={2,3,4},c,d;                     //input predefined ... tweak if you want !!
	
	cout<<"using sum function : "<<sum(a,b)<<endl;	//need a operator overloading to use cout
	c=sum(a,b);
	d=a+b;
	cout<<"c : "<<c<<" "<<"d : "<<d<<endl;
}
